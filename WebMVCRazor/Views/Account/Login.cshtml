@model WebMVCRazor.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                <h3>@ViewBag.Title</h3>
                <hr />                
                @Html.EditorFor(m => m.UserName)
                @Html.EditorFor(m => m.Password)
                <div style ='padding-left: 90px;'>
                    @Html.CheckBoxFor(m => m.RememberMe) <span style="padding-left: 20px;"/>
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <br />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary"/>
                        @*@Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-primary" })*@
                        <br /><br />                                        
                        @Html.ActionLink("Forgot password?", "ForgotPassword")
                    </div>
                </div>
            }
        </section>
    </div>
</div>