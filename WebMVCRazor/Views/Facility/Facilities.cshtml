@model IEnumerable<WebMVCRazor.Models.Facility>
@{
    ViewBag.Title = "Facilities";
}
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/GridCss")
}
<p>&nbsp;</p>
<div class="spacerBody">
    <h3>@ViewBag.Title</h3>
    <br />
    @Html.ActionLink("Create Facility", "AddFacility", "Facility", new { @class = "btn btn-primary" })
    <br />
    @{
        if (Model.Any())
        {
            <hr />
            
        var grid = new WebGrid(Model, canPage: true,canSort: false, rowsPerPage: 10, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
        
                @grid.Pager()
    <div id="gridContent">
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                //grid.Column("Id", format: (item) => item.GetSelectLink(item.Id)),
                grid.Column("Name", " Name"),
                grid.Column("Address", "Address", style: "description"),
                grid.Column("PhoneNumber", "PhoneNumber", style: "description"),             
                grid.Column("   ", format: @<text>@Html.ActionLink("Edit", "EditFacility", "Facility",new { id = item.Id }, null) </text>)
                  ))

</div>
        }
        else
        {
        }
    }
   

</div>



