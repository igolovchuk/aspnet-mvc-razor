@model WebMVCRazor.Models.EditFacilityViewModel
@{
    ViewBag.Title = "Edit Facility";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm("EditFacility", "Facility", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <br />
    <h3>@ViewBag.Title</h3>
    <hr />
    <div class="message-error">@ViewBag.Error</div>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Id, new {@class = "form-control"})
            </div>
        </div>
        @Html.EditorFor(m => m.Name)
        @Html.EditorFor(m => m.Address)
       
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, null, new { @class = "help-block" })
            </div>
        </div>

        @Html.EditorFor(m => m.IsActive)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Facilities", "Facility", new {@class = "btn btn-primary"})
                <span onclick=" return confirm('Are you really want to delete this Facility?') ">
                    @Html.ActionLink("Delete", "DeleteFacility", "Facility", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </span>
            </div>
        </div>
    </div>
}