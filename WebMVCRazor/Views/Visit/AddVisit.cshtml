@model WebMVCRazor.Models.VisitViewModel
@{
    ViewBag.Title = "Add Visit";
}
@section Scripts {

@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/bootstrap")
}

@using (Html.BeginForm("AddVisit", "Visit", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <br />
    <h3>@ViewBag.Title</h3>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.PatientId, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("VisitType", new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.VisitType, new {@class = "form-control"})
        </div>
    </div>

    @Html.EditorFor(m => m.VisitDate)

    <div class="form-group">
        @Html.Label("Provider", new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.DropDownList("providerName", ViewBag.Prov as SelectList, new {@class = "form-control"})
        </div>
    </div>
    
    <br /><br /><div class="message-success">@ViewBag.ErrorFer</div><br />
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create" />
            @Html.ActionLink("Cancel", "Visits", "Visit", new {id = Model.PatientId}, new {@class = "btn btn-primary"})
        </div>
    </div>
}